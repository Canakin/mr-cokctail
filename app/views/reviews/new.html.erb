<h3>Add a review</h3>
<%= simple_form_for [:cocktail_id, @review], url: cocktail_reviews_path(params[:cocktail_id]) do |f| %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.input :content %>
  <%= f.submit class: "btn btn-primary"%>
<% end %>

<div>
  <p><%= link_to 'Main Page', cocktails_path %></p>
</div>
