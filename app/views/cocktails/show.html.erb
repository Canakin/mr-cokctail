<div class='container'>
  <div class='card'>
    <h4>Cocktail Name</h4>
    <p><%= "#{@cocktail.name}" %></p>
    <% @cocktail.ingredients.each do |ingredient|%>
      <h4>Ingredients</h4>
      <p><%= "#{ingredient.name}" %></p>
      <% if @cocktail.name == 'Mojito' %>
        <%= image_tag("https://res.cloudinary.com/ds2odybte/image/upload/v1605617775/Can%20Photos/mojito_rozvpv.jpg", id:'cock_img') %>
      <% elsif cocktail.name == 'Bloody Mary' %>
        <%= image_tag("https://res.cloudinary.com/ds2odybte/image/upload/v1605618902/Can%20Photos/Bloody_Mary_jpg8vy.jpg", id:'cock_img') %>
      <% elsif cocktail.name == 'Sex on the beach' %>
        <%= image_tag("https://res.cloudinary.com/ds2odybte/image/upload/v1605619278/Can%20Photos/Sex_on_the_beach_zs4dtz.jpg", id:'cock_img') %>
      <% elsif cocktail.name == 'Margarita' %>
        <%= image_tag("https://res.cloudinary.com/ds2odybte/image/upload/v1605619757/Can%20Photos/Margarita_ay3zjy.jpg", id:'cock_img') %>
      <% elsif cocktail.name == 'Pina Colada' %>
        <%= image_tag("https://res.cloudinary.com/ds2odybte/image/upload/v1605619839/Can%20Photos/Pina_Collada_fs5qch.jpg", id:'cock_img') %>
      <% end  %>
    <% end  %>
    <span style='text-align:center'><%= link_to 'Main Page', cocktails_path %></span>
  </div>
</div>

